<script>
const scenes = [
  {bg: '#87CEEB', messages: [["Hello! Let's help!", "We can make a change!"], ["Yes! Small actions matter.", "Together stronger!"]]},
  {bg: '#FFD700', messages: [["Look at us!", "Kindness spreads!"], ["Keep going!", "Yes!"]]},
  {bg: '#90EE90', messages: [["Mission complete!", "We did it!"], ["Amazing teamwork!", "Voices together!"]]}
];

const sprite1 = document.getElementById('sprite1');
const sprite2 = document.getElementById('sprite2');
const speech1 = document.getElementById('speech1');
const speech2 = document.getElementById('speech2');
const stage = document.getElementById('stage');

let currentScene = 0;

function startStory() {
  runScene(0);
}

function runScene(index) {
  if (index >= scenes.length) return;
  const scene = scenes[index];
  stage.style.background = scene.bg;
  
  let step = 0;
  const interval = setInterval(() => {
    if (step >= scene.messages[0].length) {
      clearInterval(interval);
      runScene(index + 1);
      return;
    }
    
    // Move sprites
    const pos = 50 + step*120;
    sprite1.style.left = pos + 'px';
    sprite2.style.left = pos + 'px';
    
    // Show messages
    speech1.style.left = (pos + 80) + 'px';
    speech1.style.top = sprite1.offsetTop - 30 + 'px';
    speech1.textContent = scene.messages[0][step];
    speech1.style.display = 'block';
    
    speech2.style.left = (pos + 80) + 'px';
    speech2.style.top = sprite2.offsetTop - 30 + 'px';
    speech2.textContent = scene.messages[1][step];
    speech2.style.display = 'block';
    
    step++;
  }, 2000);
}
</script>

